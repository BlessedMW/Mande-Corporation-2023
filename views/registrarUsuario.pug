    .row
      .col-10.col-sm-10.col-md-10.offset-1.offset-sm-1.offset-md-1.text-start.align-content-md-center
        form(method='post')
          .form-group.mb-3
            label.form-label(style='margin-bottom: 10px;margin-top: 10px;color: #FFFFFF;')
              strong Nombre
              br
            input#nombre.form-control(type='text' placeholder='Ingrese su nombre' style='margin-bottom: 20px; ' onchange='changePassword();')
          .form-group.mb-3
            label.form-label(style='margin-bottom: 10px;margin-top: 10px;color: #FFFFFF;')
              strong Apellido
              br
            input#apellido.form-control(type='text' placeholder='Ingrese su apellido' style='margin-bottom: 20px;' onchange='changePassword();')
          .form-group.mb-3
            label.form-label(style='margin-bottom: 10px;margin-top: 10px;color: #FFFFFF;')
              strong Contrase&ntilde;a
              br
            input#password.form-control(type='password' placeholder='Ingrese su contraseña' style='margin-bottom: 20px;' onchange='changePassword();')
          .form-group.mb-3
            label.form-label(style='margin-bottom: 10px;margin-top: 10px;color: #FFFFFF;')
              strong Direcci&oacute;n
              br
            input#password.form-control(type='text' placeholder='Ingrese su dirección' style='margin-bottom: 20px;' onchange='changePassword();')
