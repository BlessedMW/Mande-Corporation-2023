              strong Recibo de servicios p&uacute;blicos:
              br
            input.form-control(type='file')
          .form-group.mb-3
            label.form-label(style='margin-bottom: 10px;margin-top: 10px;color: #FFFFFF;')
              strong Celular
              br
            input#celular.form-control(type='tel' placeholder='Ingrese su número de celular' style='margin-bottom: 20px;' onchange='changePassword();')
          .form-group.mb-3
            label.form-label(style='margin-bottom: 10px;margin-top: 10px;color: #FFFFFF;')
              strong Correo Electr&oacute;nico
              br
            input#email.form-control(type='email' placeholder='Ingrese su dirección de correo electrónico' style='margin-bottom: 20px;' onchange='changePassword();')
          p
            a(href='./ingresar.html') &iquest;tengo cuenta? 
          .row
            .col-md-6(style='margin-top: 20px;')
              a.btn.btn-secondary.d-block.d-lg-flex.justify-content-lg-center.w-100(role='button' href='./registrar.html' style='background: var(--bs-gray);') CANCELAR
            .col-md-6(style='margin-top: 20px;')
              a#submitButton.btn.btn-primary.d-block.d-lg-flex.justify-content-lg-center.w-100(role='button' href='registrarUsuario2.html' style='background: var(--bs-gray);') CONTINUAR
